<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boards">
	
	<delete id="deleteBoard" parameterType="int">
		delete from sample_boards
		where board_no = #{value}
	</delete>
	
	<insert id="">
	
	</insert>
	
	<select id="getBoardListByDeleted" parameterType="string" resultType="com.sample.vo.Board">
		select board_no, board_title, board_content, board_view_count, board_deleted, 
			user_id, board_created_date, board_updated_date, board_deleted_date
		from sample_boards
		where board_deleted = 'N'
		order by board_no desc
	</select>
	
	<select id="getBoardByNo" parameterType="int" resultType="com.sample.vo.Board">
		select board_no, board_title, board_content, board_view_count, board_deleted, 
			user_id, board_created_date, board_updated_date, board_deleted_date
		from sample_boards
		where board_no = #{value}	
	</select>
</mapper>